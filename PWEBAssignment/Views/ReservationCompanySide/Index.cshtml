@model IEnumerable<PWEBAssignment.Models.Reservations>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientUser)
            </th>
	        <th>
                @Html.DisplayNameFor(model => model.Car)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientUser.firstName)
                    @Html.DisplayFor(modelItem => item.ClientUser.lastName)
            </td>
	        <td>
                @Html.DisplayFor(modelItem => item.Car.LicencePlate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryId)
            </td>
	       
                @if (item.Delivery == null)
                {
	                <td>
	                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
	                </td>  
	                <td>
			        <a asp-action="Reject" asp-route-id="@item.Id">Details</a> 
			        </td>

                }
		      
		        <a asp-action="ReceiveCar" asp-route-id="@item.Id">Delete</a>
	       
        </tr>
}
    </tbody>
</table>
